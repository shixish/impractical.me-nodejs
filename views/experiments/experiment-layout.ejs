<% layout('../content-layout') -%>
<div class="container">
  <% include ../section/header %>
  <% include ../section/breadcrumb %>
  <div class="row">
    <div class="col-md-8">
      <%-body%>
    </div>
    <div class="col-md-4">
      <% if (node.subtitle) {%>
        <h3><%=node.subtitle%></h3>
      <%}%>
      <% if (node.description) {%>
        <p><%=node.description%></p>
      <%}%>
      <% if (node.instructions) {%>
        <hr>
        <p><%=node.instructions%></p>
      <%}%>
      <% if (node.date) {%>
        <i><%=format_date(node.date)%></i>
      <%}%>
      <% if (node.github) {%>
      <div class="list-social-icons-3x">
        <span class="tooltip-social github-link"><a href="<%-node.github%>" data-toggle="tooltip" data-placement="top" title="View the project on GitHub"><i class="fa fa-github-alt fa-3x"></i></a></span>
      </div>
      <%}%>
    </div>
  </div>
</div>